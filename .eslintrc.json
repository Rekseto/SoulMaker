{
  "parser": "babel-eslint",
  "plugins": ["import", "standard"],
  "extends": [
    "eslint:recommended",
    "standard"
  ],

  "env": {
    "es6": true,
    "node": true
  },

  "parserOptions": {
    "impliedStrict": true,
    "ecmaVersion": 7,
    "ecmaFeatures": {
      "experimentalDecorators": true,
      "experimentalObjectRestSpread": true
    }
  },

  "rules": {
    "max-len": [2, {"code": 80, "comments": 200}],
    "array-element-newline": ["error", {"multiline": true}],
    "no-return-await" : [0],
    "indent": [2, 2],
    "quotes": [2, "double"],
    "semi" : [0],
    "import/first": [0],
    "import/prefer-default-export": [0],
    "import/no-extraneous-dependencies": [0]
  }
}
